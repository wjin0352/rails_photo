<div class="page-header">
  <h1 id="postsbanner">Listing posts</h1>
</div>

<div class="index">
    <table class="breadcrumb">

      <thead>
        <tr>
          <th>Title</th>
          <th>Avatar</th>
          <th>Body</th>
          <th colspan="3"></th>
        </tr>
      </thead>


      <tbody>

        <% @posts.each do |post| %>
          <tr class="eachpost">
            <td><%= post.title %></td>
            <td><%= post.avatar %></td>
            <!-- Display of the image file !-->
            <td><%= image_tag post.avatar_url(:thumb) %></td>
            <td><%= post.body %></td>
            <td><%= link_to 'Show', post %></td>
            <td><%= link_to 'Edit', edit_post_path(post) %></td>
            <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>

      </tbody>
    </table>

    <br>

    <%= link_to 'New Post', new_post_path, class: "btn btn-default" %>
</div>